{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to gdbserver",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/target/debug/sysy_compiler",
      "args": [],
      "miDebuggerServerAddress": "localhost:1234",
      "miDebuggerPath": "/usr/bin/gdb",
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "externalConsole": false,
      "setupCommands": [
        {
          "description": "enable pretty printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "set solib search path",
          "text": "set solib-search-path /path/to/remote/libs",
          "ignoreFailures": true
        },
        {
          "description": "set sysroot (optional)",
          "text": "set sysroot /path/to/remote/sysroot",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
